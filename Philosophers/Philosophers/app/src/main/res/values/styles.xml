<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:itemBackground">@color/colorPrimaryvvv</item>
        <item name="android:textColor">#FBFCFB</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#3396CC</item>
        <item name="android:progressTint">#01012C</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <!--    <style name="MyDarkToolbarStyle" >-->
    <!--        <item name="android:colorBackground">@color/begin_title</item>-->
    <!--        <item name="android:textColor">@color/white</item>-->
    <!--    </style>-->
    <!--    &lt;!&ndash; ActionBar styles &ndash;&gt;-->

    <style name="StyleSettingsMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@color/colorPrimaryvvv</item>
    </style>
    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

</resources>
