<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dip">

    <LinearLayout
        android:id="@+id/LinearLayout2show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_round_app_info"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="11dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/title"
            android:textSize="@dimen/text_size_all"></TextView>

        <ImageButton
            android:id="@+id/buttonxxz"
            android:layout_width="37dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginTop="21dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_round_botton_more_info"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_delete_sweep_black_24dp"
            android:textColor="@color/white"

            />

    </LinearLayout>

</RelativeLayout>