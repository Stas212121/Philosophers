<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/LinearLayout2show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageviewShowcitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp" />

            <ImageButton
                android:id="@+id/newButtonZoom"
                android:layout_width="42dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_small"
                android:src="@drawable/ic_zoom_in_black_24dp" />

            <ImageButton
                android:id="@+id/imageButtonMap"
                android:layout_width="42dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_round_small"
                android:src="@drawable/bornplace" />
        </LinearLayout>


        <TextView
            android:id="@+id/textViewshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/bg_round_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yearViewShowcitat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/toolbar_year_line"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/toolbar_white"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewShowCitat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_marginLeftTwo"

            android:layout_marginRight="@dimen/layout_marginRightTwo"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="12sp"></ListView>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientone"
        app:itemIconTint="@drawable/tab_color_selector"
        app:itemTextColor="@color/colorNavText"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_container"
        app:menu="@menu/navigation_bottom"
        tools:ignore="MissingConstraints" />
</LinearLayout>